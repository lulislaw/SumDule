<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/itemSubLL"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/backgroundroundalpha"
    android:focusable="false"
    android:focusableInTouchMode="false"
    android:orientation="vertical"
    android:layout_marginTop="12dp">

    >

    <TextView
        android:id="@+id/itemTitle"
        style="@style/TextViewInter_bold20White"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/backgroundroundblue"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:paddingHorizontal="12dp"
        android:paddingVertical="2dp"
        android:text="Предмет" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="@dimen/marginout"
        android:layout_marginTop="@dimen/marginstandart"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/itemWeek"
            style="@style/TextViewInter_regular20"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:focusable="false"
            android:focusableInTouchMode="false"
            android:text="Неделя" />

        <TextView
            android:id="@+id/itemDayOfWeek"
            style="@style/TextViewInter_regular20"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/marginout"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:text="День недели"
            android:visibility="visible" />
    </LinearLayout>


    <TextView
        android:id="@+id/itemTime"
        style="@style/TextViewInter_regular20"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/marginout"
        android:layout_marginTop="@dimen/marginstandart"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:text="Время" />

    <TextView
        android:id="@+id/itemInstitute"
        style="@style/TextViewInter_regular20"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/marginout"
        android:layout_marginTop="@dimen/marginstandart"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:maxLines="3"
        android:singleLine="false"
        android:text="Институт"
        android:visibility="visible" />

    <TextView
        android:id="@+id/itemGroup"
        style="@style/TextViewInter_regular20"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/marginout"
        android:layout_marginTop="@dimen/marginstandart"
        android:layout_marginBottom="@dimen/marginstandart"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:maxLines="3"
        android:singleLine="false"
        android:text="Группа"

        android:visibility="visible" />

</LinearLayout>
